<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <!--    wizard-->
        <record id="wizard_form_view" model="ir.ui.view">
            <field name="name">projects.wizard.form</field>
            <field name="model">projects.wizard</field>
            <field name="arch" type="xml">
                    <form string="Add Engineers">
                        <group>
                          <field name="project_id"/>
                          <field name="engineer_attendees"/>
                        </group>
                        <footer>
                    <button string="Confirm" name="confirm" type="object" class="oe_highlight"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
                    </form>
            </field>
    </record>


    <record id="projects_wizard" model="ir.actions.act_window">
        <field name="name">projects wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">projects.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_company" name="The Company"/>

    <menuitem id="project_wizard" name="Add Engineers For Projects " parent="menu_company"/>

    <menuitem id="menu_all_projects_wizard" name="Add Engineers" parent="project_wizard"
              action="projects_wizard"/>


</odoo>